<div class="wiki-show">
  <h1><%= private_title(@page) %></h1>
  <small>
    submitted <%= time_ago_in_words(@page.created_at) %> ago <br>
  </small>
    <p><%= markdown(@page.body).html_safe %></p>
</div>

<div class="button-show">
  <% if user_can_edit_and_delete?(@page) %>
    <div class="col-md-4">
       <%= link_to "Edit", edit_page_path(@page), class: 'btn btn-success' %>
       <%= link_to "Delete Wiki", @page, method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure you want to delete this wiki?'} %>
     </div>
  <% end %>
    <%= link_to "View all wikis", pages_path, class: "button" %>
</div>
