<h3> My Wiki </h3>

<div class="row">
  <div class="col-md-8">
    <% @pages.each do |page| %>
      <div class="media">
        <div class="media-body">
          <h4 class="media-heading">
            <%= link_to page.title, page %>
          </h4>
        </div>
      </div>
    <% end %>
  </div>
  <div class="col-md-4">
    <%= link_to "New Public Wiki", new_page_path, class: 'btn btn-success' %>
  </div>
</div>
