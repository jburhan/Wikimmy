
<div class="row">
  <div class="wiki-index">
    <h3> Public Wikis </h3>
    <% @pages.each do |page| %>
      <div class="media">
        <div class="media-body">
          <h4 class="media-heading">
            <%= link_to page.title, page %>
          </h4>
        </div>
      </div>
    <% end %>
  </div>

  <% if user_can_create? %>
    <div class="col-md-4">
      <%= link_to "New Public Wiki", new_page_path, class: 'btn btn-success' %>
    </div>
  <% end %>

</div>
